<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="joggr Settings"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Username" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Logger intervals" />

    <RadioButton
        android:id="@+id/radioInterval5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5 seconds" />

    <RadioButton
        android:id="@+id/radioInterval10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10 seconds" />

    <RadioButton
        android:id="@+id/radioInterval30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="30 seconds" />

    <RadioButton
        android:id="@+id/radioInterval60"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="60 seconds" />

</LinearLayout>